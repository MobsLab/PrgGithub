%CreateLFPStimData


listdir=dir;

for i=1:length(listdir)
    namesession=listdir(i).name;
    le=length(namesession);
    if le>23&namesession(le-2:le)=='dat'
        namesession
        numManipe=str2num(listdis(39).name(23:24))
        if listdis(39).name(8)~='-'
         manipe{numManipe}=listdis(39).name(26:28);   
        else
        manipe{numManipe}=listdis(39).name(26:27);
        end
    end
    
end


NbManipes=14;

for numSession=1:NbManipes
    
    filenameLFP=['LFPData',num2str(numSession)];
    eval(['load ',filenameLFP]) 

    filename=['behavResources',num2str(numSession)];
    eval(['load ',filename]) 

    filenameStim=['stim',num2str(numSession)];
    eval(['load ',filenameStim]) 

    filenameLFPStim=['LFPstim',num2str(numSession)];

    for i=1:15
        
        try
        figure('color',[1 1 1]), [fh, rasterAx, histAx, matVal] = ImagePETH(LFP{i}, ts(std*1E4), -10000, +15000,'BinSize',500);

        tpsSTD{i}=Range(matVal,'s');
        MatSTD{i}=Data(matVal)';
        catch
            tpsSTD{i}=[];
            MatSTD{i}=[];
        end
        
        
        try
        figure('color',[1 1 1]), [fh, rasterAx, histAx, matVal] = ImagePETH(LFP{i}, ts(MMN*1E4), -10000, +15000,'BinSize',500);
        tpsMMN{i}=Range(matVal,'s');
        MatMMN{i}=Data(matVal)';
        catch
          tpsMMN{i}=[];
          MatMMN{i}=[];  
        end
        

        eval(['save ',filenameLFPStim,' tpsSTD MatSTD tpsMMN MatMMN']) 
        %save LFPstim tpsSTD MatSTD tpsMMN MatMMN


    end

    pause(3)
    
    close all
    
end





function SleepStages=CreateSleepStages(Wake,SWSEpoch,REMEpoch,OtherEpoch)


load behavResources Movtsd

try
    Wake;
catch
    load StateEpochSBKB SWSEpoch REMEpoch Wake smooth_ghi
    
end


SleepStages=5*ones(1,length(Range(smooth_ghi)));

rg=Range(smooth_ghi);


rgSWS=Range(Restrict(smooth_ghi,SWSEpoch));
idSWS=(find(ismember(rg,rgSWS)==1));

rgREM=Range(Restrict(smooth_ghi,REMEpoch));
idREM=(find(ismember(rg,rgREM)==1));

rgwake=Range(Restrict(smooth_ghi,Wake));
idwake=(find(ismember(rg,rgwake)==1));

try
    rgother=Range(Restrict(smooth_ghi,OtherEpoch));
    idother=(find(ismember(rg,rgother)==1));
end


try
    SleepStages(idwake)=3;
end
try
    SleepStages(idREM)=1;
end
try
    SleepStages(idSWS)=2;
end


SleepStages=tsd(rg,SleepStages');

figure('color',[1 1 1])
hold on, plot(Range(SleepStages,'s'),Data(SleepStages),'k')
hold on, plot(Range(Restrict(SleepStages,Wake),'s'),Data(Restrict(SleepStages,Wake)),'bo','markerfacecolor','b')
hold on, plot(Range(Restrict(SleepStages,REMEpoch),'s'),Data(Restrict(SleepStages,REMEpoch)),'ro','markerfacecolor','r')
hold on, plot(Range(Restrict(SleepStages,SWSEpoch),'s'),Data(Restrict(SleepStages,SWSEpoch)),'go','markerfacecolor','g')
hold on, plot(Range(Movtsd,'s'),rescale(Data(Movtsd),3.5,5),'color',[0.7 0.7 0.7])
ylim([0 5])
